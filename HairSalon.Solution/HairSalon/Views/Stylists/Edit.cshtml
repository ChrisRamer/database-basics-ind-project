@{
	Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2 id="title">Edit Stylist</h2>

<hr />

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.StylistId)

	@Html.LabelFor(model => model.Name)
	<br>
	@Html.TextBoxFor(model => model.Name, new { @required = true, placeholder = "Name for stylist" })
	<br><br>
	<input type="submit" value="Save" />
}

<hr />

<p>
	@Html.ActionLink("View all stylists", "Index")
</p>