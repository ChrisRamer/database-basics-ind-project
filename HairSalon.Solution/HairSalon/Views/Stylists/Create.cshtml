@{
	Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h2 id="title">Add a new stylist</h2>

<hr />

@using (Html.BeginForm())
{
	@Html.LabelFor(model => model.Name)
	<br>
	@Html.TextBoxFor(model => model.Name, new { @required = true, placeholder = "Name for stylist" })
	<br><br>
	<input type="submit" value="Add new stylist" />
}

<hr />

<p>
	@Html.ActionLink("View all stylists", "Index")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>