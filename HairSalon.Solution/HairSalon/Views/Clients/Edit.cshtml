@{
	Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2 id="title">Edit Client</h2>

<hr />

<h3>Editing client: <b>@Html.DisplayFor(model => model.Name)</b></h3>

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.ClientId)

	@Html.LabelFor(model => model.Name)
	<br>
	@Html.TextBoxFor(model => model.Name, new { @required = true, placeholder="Name for client" })
	<br>
	@Html.LabelFor(model => model.Stylist)
	<br>
	@Html.DropDownList("StylistId")
	 <br><br>
	@Html.LabelFor(model => model.DateOfLastVisit)
	 <br>
	 <input id="date" name="DateOfLastVisit" type="date" value="@string.Format("{0:yyyy-MM-dd}", Model.DateOfLastVisit)" required>
	<br><br>
	<input type="submit" value="Save" />
}

<hr />

<p>
	@Html.ActionLink("View all clients", "Index")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>