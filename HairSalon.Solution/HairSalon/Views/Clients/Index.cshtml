@{
	Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1 id="title">Clients</h1>

<hr />

@if (@Model.Count == 0)
{
	<h3>No clients have been added yet</h3>
}

<ul>
	@foreach (Client client in Model)
	{
		<lI>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</lI>
	}
</ul>

<hr />

<p>
	@Html.ActionLink("Add a new client", "Create")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>