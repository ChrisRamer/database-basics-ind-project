@{
	Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
	@Html.LabelFor(model => model.Name)
	@Html.TextBoxFor(model => model.Name)

	@Html.LabelFor(model => model.Stylist)
	@Html.DropDownList("StylistId")

	@Html.LabelFor(model => model.DateOfLastVisit)
	<input id="date", name="DateOfLastVisit", type="date">

	<input type="submit" value="Add a new client" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>